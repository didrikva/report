{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <table class="library-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titel</th>
                <th>ISBN</th>
                <th>Författare</th>
                <th>Bild</th>
            </tr>
        </thead>
        <tbody>
            {% for library in librarys %}
                <tr>
                    <td>
                        <a href="{{ path('view_one', { id: library.getId }) }}">
                            {{ library.getId }}
                        </a>
                    </td>
                    <td>{{ library.getTitel|e }}</td>
                    <td>{{ library.getIsbn|e }}</td>
                    <td>{{ library.getForfattare|e }}</td>
                    <td>
                        <a href="{{ path('view_one', { id: library.getId }) }}">
                            <img src="{{ asset(library.getImg) }}" alt="{{ library.getTitel }}" style="height: 80px;" />
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
     <a href="{{ path('library_create_get') }}"><button class ="update">Lägg till ny bok</button></a>
</div>
{% endblock %}
